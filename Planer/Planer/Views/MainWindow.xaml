<Window x:Class="Planer.Views.MainWindow"
        x:Name="mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:Planer.ViewModels"
        WindowStartupLocation="CenterScreen"
        Title="Main Window" Height="350" Width="525">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Projects">
                <MenuItem Header="Open Project" Command="{Binding OpenProjectClick}"/>
                <MenuItem Header="New Project" Command="{Binding NewProjectClick}"/>
            </MenuItem>
        </Menu>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="User Name:"/>
            <TextBlock Text="{Binding CurrentUser.Name}" Foreground="Red" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
            <Label Content="Project:"/>
            <TextBlock Text="{Binding CurrentProject.Name}" Foreground="Red" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
